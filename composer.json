{
	"name": "pvc/validator",
	"description": "pvc validation library",
	"type": "project",
	"authors": [
		{
			"name": "Doug Wilbourne",
			"email": "dougwilbourne@gmail.com"
		}
	],
	"license": "MIT",
	"config": {
		"php": "8.1"
	},
	"autoload": {
		"psr-4": {
			"pvc\\validator\\": "src/",
			"pvcTests\\validator\\": "tests/",
			"pvcExamples\\validator\\": "examples/"
		}
	},
	"minimum-stability": "dev",
	"require": {
		"ext-curl": "*",
		"ext-intl": "*",
		"ext-dom": "*",
		"ext-fileinfo": "*",
		"ext-libxml": "*",
		"ext-simplexml": "*",
		"php-di/php-di": "*",
		"pvc/err": "*",
		"pvc/msg": "*",
		"pvc/interfaces": "*",
		"pvc/intl": "*",
		"pvc/regex": "*",
		"pvc/struct": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^9",
		"squizlabs/php_codesniffer": "*",
		"friendsofphp/php-cs-fixer": "*",
		"guzzlehttp/guzzle": "*",
		"rexxars/html-validator": "*",
		"phpstan/phpstan": "*",
		"pvc/testing-traits": "*"
	}
}
